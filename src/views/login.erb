<div>
    <div class="container">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <center><img src="images/soccer_ball.jpg" height="140" width="180"></center>
                </div>
                <div class="panel-body">
                    <% if @error != nil %>
                        <div class="text-danger">
                        <%= @error %>
                        </div>
                    <% end %>
                    <form class="form-horizontal" action="login" method="POST" name="frmlogin" role="form">
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-8">
                                <input type="text" class="form-control" name="login" placeholder="Login" required>
                            </div>
                            <br><br>
                            <div class="col-sm-offset-2 col-sm-8">
                                <input type="password" class="form-control" name="password" placeholder="Password" required>
                            </div>
                        </div>
                        <hr>
                        <div class="form-group">
                            <div class="col-sm-offset-1 col-sm-10">
                                <button type="submit" name="submit" value="Login" class="btn btn-success btn-block">Login</button>
                                <button type="reset" class="btn btn-info btn-block">Clear</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="panel-footer">
                    <a href="register" class="text-info">Register</a>
                </div>
            </div>
        </div>
    </div>
</div>