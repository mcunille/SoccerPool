<div>
	<div class="page-title bg-success">
	    <p>Register</p>
	</div>
	<div class="container"> 
		<div class="col-md-4 col-md-offset-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<center><img src="images/soccer_ball.jpg" height="140" width="180"></center>
                </div>  
                <div class="panel-body" >
					<% if @error != nil %>
                        <div class="text-danger">
                        <%= @error %>
                        </div>
                    <% end %>
					<form class="form-horizontal" action="register" method="POST" name="frmregister" role="form" >
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-8">
								<input type="text" class="form-control" name="login" placeholder="Login" required>
							</div>
							<br><br>
							<div class="col-sm-offset-2 col-sm-8">
								<input type="password" class="form-control" name="password" placeholder="Password" required>
							</div>
							<br><br>
							<div class="col-sm-offset-2 col-sm-8">
								<input type="password" class="form-control" name="password_confirm" placeholder="Confirm Password" required>
							</div>
						</div>
						<hr>
						<div class="form-group"> 
							<div class="col-sm-offset-1 col-sm-10">
								<button type="submit" class="btn btn-success btn-block text-left">
									<img src="images/soccer_ball2.png" width="20" height="20"></img>
									&nbsp Sign Up
								</button>
							</div>
						</div>
					</form>
				</div>
				<div class="panel-footer">
                    <a href="login" class="text-info">I already have an account</a>
                </div>
			</div>	
		</div>
	</div>
</div>